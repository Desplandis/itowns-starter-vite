{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "target": "es6",
        "allowJs": true,
        "paths": {
            "three/addons/*": [
                "node_modules/@types/three/examples/jsm/*"
            ],
        },
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./"
    },
    "include": [
        "./src/**.*"
    ],
    "exclude": [
        "dist"
    ]
}
